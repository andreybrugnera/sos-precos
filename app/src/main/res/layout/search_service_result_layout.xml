<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/list_item_shadow_box"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/et_place_name"
            style="?android:textAppearanceListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start"
            android:paddingStart="2dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="5dp"
            android:textColor="@color/input_text_color"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/et_service_name"
            style="?android:textAppearanceListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start"
            android:paddingStart="2dp"
            android:paddingTop="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="5dp"
            android:textColor="@color/input_text_color" />

        <TextView
            android:id="@+id/et_service_price"
            style="?android:textAppearanceListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start"
            android:paddingStart="2dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="10dp"
            android:textColor="@color/input_text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingEnd="10dp">

        <RatingBar
            android:id="@+id/rb_place_avg_score"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="2"
            android:numStars="5"
            android:paddingStart="0dp"
            android:paddingTop="5dp"
            android:paddingEnd="2dp"
            android:paddingBottom="10dp"
            android:stepSize="0.5"
            android:textColor="@color/label_text_color"
            android:theme="@style/RatingBar" />

        <TextView
            android:id="@+id/et_place_distance"
            style="?android:textAppearanceListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="2"
            android:paddingStart="0dp"
            android:paddingTop="5dp"
            android:paddingEnd="2dp"
            android:paddingBottom="10dp"
            android:textColor="@color/input_text_color" />
    </LinearLayout>

</LinearLayout>